<%- include("../templates/head") %>
<%- include('../templates/header', { loggedIn: loggedIn }) %>

<main class="mx-auto max-w-7xl flex-1 w-full">
    <section class="grid gap-4 md:gap-8 p-4 md:p-6">
        <h1 class="text-2xl font-bold text-center mb-4">Usuarios - Bienvenido</h1>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-header-registro2 text-white">
                    <tr>
                        <th class="px-4 py-2">Nombre de Usuario</th>
                        <th class="px-4 py-2">Correo Electrónico</th>
                        <th class="px-4 py-2">Rol</th>
                        <th class="px-4 py-2">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% users.forEach(user => { %>
                        <tr class="hover:bg-gray-100">
                            <td class="px-4 py-2"><%= user.username %></td>
                            <td class="px-4 py-2"><%= user.email %></td>
                            <td class="px-4 py-2"><%= user.role %></td>
                            <td class="px-4 py-2">
                                <a href="#" class="text-blue-500 hover:text-blue-700" onclick="openEditModal('<%= user._id %>')">Editar</a>
                                <button type="button" class="text-red-500 hover:text-red-700">Eliminar</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="mt-4">
            <a href="/admin/users/add" class="bg-header-registro2 text-white px-4 py-2 rounded hover:bg-header-negro">Agregar Usuario</a>
        </div>
    </section>
</main>

