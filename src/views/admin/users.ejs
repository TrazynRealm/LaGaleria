<%- include("../templates/head") %>
    <%- include('../templates/header', { loggedIn: loggedIn }) %>

        <main class="mx-auto max-w-7xl flex-1 w-full">
            <section class="grid gap-4 md:gap-8 p-4 md:p-6">
                <div class="px-8 py-4 rounded-lg border bg-header-registro2 text-white shadow-sm ">
                    <!-- ENCABEZADO -->
                    <div class="grid grid-cols-2 justify-between">
                        <!-- PÁGINA -->
                        <div class="grid items-center mb-2">
                            <!-- TÍTULO -->
                            <h1 class="text-3xl font-semibold text-yellow-500 mb-1">PANEL DE ADMIN</h1>
                            <!-- SUBTÍTULO -->
                            <h2 class="text-xl font-semibold text-yellow-500">Administración de usuarios</h2>
                        </div>
                    </div>
                    <div class="mt-4">
                        <!-- CONTENIDO -->
                        <div class=" text-center bg-header-registro border-2 rounded-lg">
                            <table class="w-full">
                                <thead class="bg-header-registro">
                                    <tr>
                                        <th class="px-4 py-2">Username</th>
                                        <th class="px-4 py-2">Email</th>
                                        <th class="px-4 py-2">Rol</th>
                                        <th class="px-4 py-2">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-blue-200">
                                    <% users.forEach(user=> { %>
                                        <tr class="hover:text-yellow-500">
                                            <td class="px-4 py-2">
                                                <%= user.username %>
                                            </td>
                                            <td class="px-4 py-2">
                                                <%= user.email %>
                                            </td>
                                            <td class="px-4 py-2">
                                                <%= user.role %>
                                            </td>
                                            <td class="px-4 py-2 flex justify-center gap-4">
                                                <a href="#" class="text-blue-500 hover:text-blue-700"
                                                    onclick="openEditModal('<%= user._id %>')">Editar</a>
                                                <a href="/admin/users/delete/<%= user._id %>"
                                                    class="text-red-500 hover:text-red-700">Eliminar</a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>

            </section>
        </main>

        <!-- Modal de Edición -->
        <div id="editUserModal" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title"
            role="dialog" aria-modal="true">
            <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                <!-- Overlay -->
                <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
                <!-- Modal -->
                <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                <div
                    class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                    <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                            Editar Usuario
