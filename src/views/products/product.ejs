<%- include("../templates/head") %>
<%- include("../templates/header") %>
    <div className="grid md:grid-cols-2 items-start max-w-6xl px-4 mx-auto gap-6 lg:gap-12 py-6">
      <div className="grid gap-4">
        <div className="flex items-start">
          <div className="grid gap-4">
            <h1 className="font-bold text-2xl sm:text-3xl">Warhammer 40k "Start Collecting" Set</h1>
            <div>
              <p>
                The Warhammer 40,000 "Start Collecting!" is a perfect way to start your Warhammer 40,000 collection.
                This box contains a complete set of miniatures, rules, and accessories to begin your journey into the
                41st Millennium.
              </p>
            </div>
          </div>
          <div className="text-4xl font-bold ml-auto">$90</div>
        </div>
        <div className="grid gap-4">
          <form className="grid gap-4">
            <div className="grid gap-2">
              <Label className="text-base" htmlFor="color">
                Color
              </Label>
              <RadioGroup className="flex items-center gap-2" defaultValue="warhammer-red" id="color">
                <Label
                  className="border cursor-pointer rounded-md p-2 flex items-center gap-2 [&:has(:checked)]:bg-gray-100 dark:[&:has(:checked)]:bg-gray-800"
                  htmlFor="color-warhammer-red"
                >
                  <RadioGroupItem id="color-warhammer-red" value="warhammer-red" />
                  Warhammer Red
                </Label>
                <Label
                  className="border cursor-pointer rounded-md p-2 flex items-center gap-2 [&:has(:checked)]:bg-gray-100 dark:[&:has(:checked)]:bg-gray-800"
                  htmlFor="color-warhammer-blue"
                >
                  <RadioGroupItem id="color-warhammer-blue" value="warhammer-blue" />
                  Warhammer Blue
                </Label>
                <Label
                  className="border cursor-pointer rounded-md p-2 flex items-center gap-2 [&:has(:checked)]:bg-gray-100 dark:[&:has(:checked)]:bg-gray-800"
                  htmlFor="color-warhammer-green"
                >
                  <RadioGroupItem id="color-warhammer-green" value="warhammer-green" />
                  Warhammer Green
                </Label>
              </RadioGroup>
            </div>
            <div className="grid gap-2">
              <Label className="text-base" htmlFor="size">
                Size
              </Label>
              <RadioGroup className="flex items-center gap-2" defaultValue="mini" id="size">
                <Label
                  className="border cursor-pointer rounded-md p-2 flex items-center gap-2 [&:has(:checked)]:bg-gray-100 dark:[&:has(:checked)]:bg-gray-800"
                  htmlFor="size-mini"
                >
                  <RadioGroupItem id="size-mini" value="mini" />
                  Mini
                </Label>
                <Label
                  className="border cursor-pointer rounded-md p-2 flex items-center gap-2 [&:has(:checked)]:bg-gray-100 dark:[&:has(:checked)]:bg-gray-800"
                  htmlFor="size-standard"
                >
                  <RadioGroupItem id="size-standard" value="standard" />
                  Standard
                </Label>
              </RadioGroup>
            </div>
            <div className="grid gap-2">
              <Label className="text-base" htmlFor="quantity">
                Quantity
              </Label>
              <Select defaultValue="1">
                <SelectTrigger className="w-24">
                  <SelectValue placeholder="Select" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="1">1</SelectItem>
                  <SelectItem value="2">2</SelectItem>
                  <SelectItem value="3">3</SelectItem>
                  <SelectItem value="4">4</SelectItem>
                  <SelectItem value="5">5</SelectItem>
                </SelectContent>
              </Select>
            </div>
            <Button size="lg">Add to cart</Button>
          </form>
        </div>
      </div>
      <div className="grid gap-4">
        <img
          alt="Product Image"
          className="aspect-square object-cover border border-gray-200 w-full rounded-lg overflow-hidden dark:border-gray-800"
          height={600}
          src="/placeholder.svg"
          width={600}
        />
      </div>
    </div>