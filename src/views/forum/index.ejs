<%- include("../templates/head") %>
<%- include('../templates/header', { loggedIn: loggedIn }) %>

<!-- Aquí va el HTML general de tu página, como la barra de navegación, encabezado, etc. -->

<div class="container mx-auto py-8">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-3xl font-semibold">Todos los Posts</h1>
    <% if (loggedIn) { %>
        <a href="/forum/new-post" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Nuevo Post</a>
        <% } %>
  </div>

  <!-- Lista de posts -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% posts.forEach(post => { %>
      <a href="/forum/post/<%= post._id %>" class="block border rounded-lg p-4 cursor-pointer bg-green-500 shadow-md hover:bg-gray-100">
        <h2 class="text-lg font-semibold mb-2"><%= post.title %></h2>
        <p class="text-gray-600">Por <%= post.author.username %> <%= post.createdAt %></p>
      </a>
    <% }); %>
  </div>
</div>
