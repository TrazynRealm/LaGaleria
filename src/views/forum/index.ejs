<%- include("../templates/head") %>
<%- include("../templates/header") %>
<div class="container mx-auto py-6">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-semibold mb-4">Foro</h2>
  
      <!-- Lista de categorías -->
      <div class="mb-6">
        <h3 class="text-xl font-semibold mb-2">Categorías</h3>
        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% categories.forEach(category => { %>
            <li class="bg-green-500 p-4 rounded-lg shadow-md">
              <h4 class="text-lg font-semibold mb-2"><%= category.name %></h4>
              <p class="text-white"><%= category.description %></p>
              <a href="/forum/<%= category.id %>" class="block mt-2 text-black-500 hover:underline">Ver temas</a>
            </li>
          <% }); %>
        </ul>
      </div>
  
      <!-- Lista de temas -->
      <div>
        <h3 class="text-xl font-semibold mb-2">Últimos temas</h3>
        <ul class="divide-y divide-gray-200">
          <% posts.forEach(post => { %>
            <li class="py-4 bg-gray-500">
              <a href="/forum/post/<%= post.id %>" class="text-xl font-semibold text-green-500 hover:underline"><%= post.title %></a>
              <p class="text-yellow-200 mt-1">Publicado por <%= post.author %> el <%= post.date %></p>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
  