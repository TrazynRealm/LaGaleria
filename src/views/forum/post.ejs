<%- include("../templates/header") %>

<div class="container mx-auto py-6">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-3xl font-semibold mb-4"><%= post.title %></h2>
            <div class="flex items-center justify-between mb-4">
                <p class="text-gray-600">Publicado por <%= post.author %> el <%= post.date %></p>
                <button class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Responder</button>
            </div>
            <hr class="my-4">
            <div class="mt-4">
                <p class="text-gray-700"><%= post.content %></p>
            </div>
        </div>

        <!-- Sección de Respuestas -->
        <div class="mt-6">
            <h3 class="text-2xl font-semibold mb-4">Respuestas</h3>
            <% if (comments.length > 0) { %>
                <ul>
                    <% comments.forEach(response => { %>
                        <li class="bg-gray-100 p-4 rounded-lg shadow-md mb-4">
                            <p class="text-gray-600 mb-2">Publicado por <%= response.author %> el <%= response.date %></p>
                            <p class="text-gray-700"><%= response.content %></p>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p class="text-gray-600">Todavía no hay respuestas.</p>
            <% } %>
        </div>
    </div>
</div>
