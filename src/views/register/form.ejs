<main class="mx-auto max-w-7xl flex-1 w-full">
    <section class="grid gap-4 md:gap-8 p-4 md:p-6">
        <div class=" mx-auto flex justify-center items-center">
            <div class="rounded-lg border bg-gradient-to-tl from-black to-header-verde text-white shadow-sm p-8 w-96">
                <!-- TÍTULO -->
                <h1 class="text-3xl font-extrabold mb-6 text-center">Registro</h1>
                <!-- FORM -->
                <form action="/register" method="POST" class="space-y-4">
                    <!-- USERNAME -->
                    <div class="mb-4">
                        <label for="username" class="block text-sm font-medium ps-1">Nombre de usuario</label>
                        <input type="text" id="username" name="username"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50 text-black ps-2"
                            required>
                    </div>
                    <!-- EMAIL -->
                    <div class="mb-4">
                        <label for="email" class="block text-sm font-medium ps-1">Correo electrónico</label>
                        <input type="email" id="email" name="email"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50 text-black ps-2"
                            required>
                    </div>
                    <!-- PASSWORD -->
                    <div class="mb-4">
                        <label for="password" class="block text-sm font-medium ps-1">Contraseña</label>
                        <input type="password" id="password" name="password"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50 text-black ps-2"
                            required>
                    </div>
                    <!-- ENVIAR DATOS -->
                    <div class="flex justify-center">
                        <button type="submit"
                            class="text-white underline hover:bg-gradient-to-r from-header-verde  to-yellow-500 inline-block hover:text-transparent bg-clip-text">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- SUGERENCIA -->
        <div class="bg-black border-white border-2 mx-auto px-4 py-2 rounded-full">
            <p class="text-sm text-yellow-500">La contraseña debe tener al menos 8 caracteres y contener al
                menos
                una letra mayúscula, una letra minúscula y un número.</p>
        </div>
    </section>
</main>