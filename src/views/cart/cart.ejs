<main class="mx-auto max-w-7xl flex-1 w-full">
    <section class="grid gap-4 md:gap-8 p-4 md:p-6">
        <div class="px-8 py-4 rounded-lg border bg-header-registro2 text-white shadow-sm">
            <!-- ENCABEZADO -->
            <div class="grid grid-cols-2 justify-between">
                <!-- PÁGINA -->
                <div class="grid items-center mb-2">
                    <!-- TÍTULO -->
                    <h1 class="text-3xl font-semibold text-yellow-500 mb-1">CARRITO</h1>
                    <!-- SUBTÍTULO -->
                    <h2 class="text-xl font-semibold text-yellow-500">Tus productos</h2>
                </div>
                <!-- ACTIONS -->
                <!-- <div class="flex justify-center items-center">
                    <a href="/admin/users/add" class="border rounded-lg bg-header-registro2 px-4 py-2 hover:bg-gradient-to-t from-header-negro to-header-registro2 hover:border-yellow-500">Agregar Usuario</a>
                </div> -->
            </div>
            <!-- CONTENIDO -->
            <div class="text-center bg-header-registro border-2 rounded-lg p-4">
                <!-- CARRITO CON PRODUCTOS -->
                <% if (cart && cart.products.length > 0) { %>
                    <div class="container mx-auto px-4 py-8 md:py-12">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <% cart.products.forEach(item => { %>
                                <div class="border rounded-lg p-6 bg-white dark:bg-gray-900 dark:border-gray-800">
                                    <div class="flex items-center justify-between mb-6">
                                        <h2 class="text-2xl font-bold">Your Cart</h2>
                                        <button class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-50">
                                            <TrashIcon class="w-5 h-5" />
                                            <span class="sr-only">Clear cart</span>
                                        </button>
                                    </div>
                                    <div class="space-y-6">
                                        <div class="grid grid-cols-[80px_1fr_auto] items-center gap-4">
                                            <div>
                                                <img alt="Product Image" class="rounded-md object-cover" src="/placeholder.svg" width="80" height="80" />
                                            </div>
                                            <div>
                                                <h3 class="font-medium"><%= item.product.name %></h3>
                                                <p class="text-gray-500 dark:text-gray-400"><%= item.product.description %></p>
                                            </div>
                                            <div class="flex items-center gap-2">
                                                <select class="w-20" name="quantity">
                                                    <% for(let i = 1; i <= 5; i++) { %>
                                                        <option value="<%= i %>" <% if (item.quantity === i) { %>selected<% } %>><%= i %></option>
                                                    <% } %>
                                                </select>
                                                <div class="font-medium"><%= item.product.price %></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                    <!-- CARRITO VACÍO -->
                <% } else { %>
                    <div class="text-center">
                        <h2 class="text-2xl font-bold mb-4">Carrito Vacío</h2>
                        <p class="text-yellow-500">Tu carrito está vacío. ¡Agrega algunos productos!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
</main>
