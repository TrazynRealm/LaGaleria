<main>
    <section>
        <div class="container">
            <h1>Carrito de Compras</h1>
            <table>
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se mostrarán los productos del carrito -->
                    <tr>
                        <td>Producto 1</td>
                        <td>$10.00</td>
                        <td>2</td>
                        <td>$20.00</td>
                        <td class="action-buttons">
                            <button>Editar</button>
                            <button>Eliminar</button>
                        </td>
                    </tr>
                    <!-- Puedes repetir esta estructura para cada producto en el carrito -->
                </tbody>
            </table>
            <div class="total">
                Total: $50.00 <!-- Aquí se mostrará el total del carrito -->
            </div>
            <div class="action-buttons">
                <button>Continuar Comprando</button>
                <button>Proceder al Pago</button>
            </div>
        </div>
    </section>
</main>